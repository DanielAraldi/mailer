{
  "name": "mailer",
  "version": "1.0.0",
  "description": "A best micro-saas to send e-mails",
  "main": "index.js",
  "scripts": {
    "build": "sucrase ./src -d ./dist --transforms imports",
    "start": "node dist/server.js",
    "update": "npm-check -s -u",
    "lint": "eslint . --fix",
    "prepare": "husky install",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm run test -- --watch -c jest-unit-config.js",
    "test:integration": "npm run test -- --watch -c jest-integration-config.js",
    "test:staged": "npm run test -- --findRelatedTests .",
    "test:ci": "npm run test -- --coverage",
    "test:clear": "jest --clearCache"
  },
  "keywords": [
    "Micro-saas",
    "E-mail"
  ],
  "author": "Daniel SansÃ£o Araldi and Rafael Mota Alves",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "nodemailer": "^6.9.3"
  },
  "devDependencies": {
    "@babel/core": "^7.22.8",
    "@babel/preset-env": "^7.22.7",
    "babel-jest": "^29.6.1",
    "eslint": "^8.44.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jest": "^27.2.2",
    "eslint-plugin-n": "^16.0.1",
    "eslint-plugin-promise": "^6.1.1",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.0",
    "npm-check": "^6.0.1",
    "sucrase": "^3.32.0",
    "ts-jest": "^29.1.1"
  }
}
