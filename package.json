{
  "name": "mailer",
  "version": "1.0.0",
  "description": "A best micro-saas to send e-mails",
  "main": "index.js",
  "scripts": {
    "build": "rimraf dist && tsc -p tsconfig-build.json",
    "build:watch": "rimraf dist && tsc -p tsconfig-build.json -w",
    "start": "node dist/server.js",
    "update": "npm-check -s -u",
    "lint": "eslint . --ext ts --fix",
    "prepare": "husky install",
    "test": "jest --passWithNoTests --runInBand --no-cache",
    "test:verbose": "jest --passWithNoTests --runInBand",
    "test:unit": "npm run test -- --watch -c jest-unit-config.js",
    "test:integration": "npm run test -- --watch -c jest-integration-config.js",
    "test:staged": "npm run test -- --findRelatedTests .",
    "test:ci": "npm run test -- --coverage",
    "test:coveralls": "npm run test:ci && coveralls < coverage/lcov.info",
    "test:clear": "jest --clearCache"
  },
  "keywords": [
    "Micro-saas",
    "E-mail"
  ],
  "author": "Daniel SansÃ£o Araldi and Rafael Mota Alves",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "^5.7.1",
    "express": "^4.18.2",
    "helmet": "^7.0.0",
    "nodemailer": "^6.9.4",
    "validator": "^13.11.0"
  },
  "devDependencies": {
    "@babel/core": "^7.22.9",
    "@babel/preset-env": "^7.22.9",
    "@faker-js/faker": "^8.0.2",
    "@types/express": "^4.17.17",
    "@types/jest": "^29.5.3",
    "@types/node": "^20.4.4",
    "@types/nodemailer": "^6.4.8",
    "@types/validator": "^13.11.5",
    "@typescript-eslint/eslint-plugin": "^5.52.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-jest": "^29.6.1",
    "coveralls": "^3.1.1",
    "eslint": "^8.0.1",
    "eslint-config-standard-with-typescript": "^37.0.0",
    "eslint-plugin-import": "^2.25.2",
    "eslint-plugin-n": "^15.0.0",
    "eslint-plugin-promise": "^6.0.0",
    "git-commit-msg-linter": "^5.0.4",
    "husky": "^8.0.3",
    "jest": "^29.6.1",
    "lint-staged": "^13.2.3",
    "nodemon": "^3.0.1",
    "npm-check": "^6.0.1",
    "prisma": "^5.7.1",
    "rimraf": "^5.0.1",
    "ts-jest": "^29.1.1",
    "typescript": "^5.1.6"
  }
}
